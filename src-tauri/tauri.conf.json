{
  "productName": "neko233-hardware-viewer",
  "version": "1.0.13",
  "identifier": "com.neko233.hardwareviewer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Neko233 Hardware Viewer",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": true,
        "label": "main"
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        "default"
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "endpoints": [
        "https://raw.githubusercontent.com/neko233-com/neko233-hardware-viewer/main/latest.json"
      ],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM3Qzk5RTREREZDRTBFQzAKUldUQURzN2ZUWjdKTjI4NGg3YmpYMkVMTmVRQ1hlZ1pGUXM4eld0LzBHdkhLd0toQThuZ2FTNFgK"
    }
  }
}
